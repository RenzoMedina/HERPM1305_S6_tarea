<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"    tools:context=".InfractionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/infraction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:title="Infracciones"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:hint="Nombre comercial"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtRut"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTitleInfr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Registro de Infracción"
        android:textAlignment="center"
        android:textSize="@dimen/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infraction_toolbar"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtRut"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:hint="RUT 11.111.111-1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleInfr"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtInfracion"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:hint="Detalle la infración"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtDireccion"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtDireccion"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:hint="Dirección "
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNombre"
        tools:ignore="MissingConstraints" />
<Button
    android:id="@+id/saveData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mg_lg"
    android:textSize="@dimen/txt_subtitle"
    android:text="Guardar"
    app:layout_constraintTop_toBottomOf="@id/edtInfracion"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>